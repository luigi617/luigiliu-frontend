{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vitest"],
    "outDir": "./dist",   // This specifies the output folder
    "rootDir": "./src"     // This specifies the root folder of your source files
  },
  "include": ["src"]
}
